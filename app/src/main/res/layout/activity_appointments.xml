<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/backgroundcolor"
    android:layout_height="match_parent"
    tools:context=".Appointments">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="408dp"
        android:background="@drawable/whiteboxcircularcorner"
        android:padding="15dp"
        android:text="Jackson Memorial Hospital"
        android:textAlignment="center"
        android:textColor="#b30059"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="312dp"
        android:layout_height="60dp"
        android:layout_marginTop="484dp"
        android:background="@drawable/whiteboxcircularcorner"
        android:padding="15dp"
        android:text="Timings 9:00 am to 8:00 pm"
        android:textAlignment="center"
        android:textColor="#b30059"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="560dp"
        android:background="@drawable/whiteboxcircularcorner"
        android:padding="15dp"
        android:text="Based on our diagnosis we\ninsist you visit in the given\ntime slot"
        android:textAlignment="center"
        android:textColor="#b30059"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="312dp"
        android:layout_height="268dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/shadowbox"
        android:padding="15dp"
        android:text="List of nearby partner hospitals and diagonstic centers\n\n\u2022 West Palm Beach Hospital\n\n\u2022 St. Petersburg Hospital"
        android:textAlignment="textStart"
        android:textColor="#b30059"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="256dp"
        android:layout_height="57dp"
        android:layout_marginTop="16dp"
        android:text="Appointments"
        android:textAlignment="center"
        android:textColor="#b30059"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
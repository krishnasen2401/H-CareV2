<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/backgroundcolor"
    android:layout_height="match_parent"
    tools:context="com.infosys.connected.h_carev2.X_ray_Diagonis">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/x_ray_message"
        android:layout_width="330dp"
        android:layout_height="109dp"
        android:layout_marginTop="672dp"
        android:background="@drawable/shadowbox"
        android:padding="15dp"
        android:text="Thanks for uploading your\nX-ray.We will assign you a\nslot soon!"
        android:textAlignment="center"
        android:textColor="#b30059"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="208dp"
        android:layout_height="57dp"
        android:layout_marginTop="184dp"
        android:background="@drawable/shadowbox"
        android:padding="15dp"
        android:text="Results"
        android:textAlignment="center"
        android:textColor="#b30059"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.137"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/x_ray_upload_name"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_marginTop="108dp"
        android:background="@drawable/shadowbox"
        android:padding="15dp"
        android:text="Upload X-Ray"
        android:textAlignment="center"
        android:textColor="#b30059"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.137"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="281dp"
        android:layout_height="69dp"
        android:layout_marginTop="24dp"
        android:text="X-Ray Diagnosis"
        android:textAlignment="center"
        android:textColor="#b30059"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:layout_width="65dp"
        android:layout_height="59dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="104dp"
        android:background="@drawable/upload_icon"
        android:onClick="imagePickers"
        app:layout_constraintStart_toEndOf="@+id/x_ray_upload_name"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/upload_icon" />

    <TableLayout
        android:id="@+id/x_ray_tl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/topleftcell"
                android:padding="15dp"
                android:text="Pneumonia"
                android:textAlignment="textStart"
                android:textColor="#b30059"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pneumoniarisk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/toprightcell"
                android:padding="15dp"
                android:text="High Risk"
                android:textAlignment="textStart"
                android:textColor="#b30059"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/pnerrorimage"
                android:layout_width="57dp"
                android:layout_height="match_parent"
                android:background="@drawable/red_exclamation1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/whitebox_with_border"
                android:padding="15dp"
                android:text="Facture"
                android:textAlignment="textStart"
                android:textColor="#b30059"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/whitebox_with_border"
                android:padding="15dp"
                android:text="Absent"
                android:textAlignment="textStart"
                android:textColor="#b30059"
                android:textSize="20dp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bottomleftcell"
                android:padding="15dp"
                android:text="Cystic\nFibrosis"
                android:textAlignment="textStart"
                android:textColor="#b30059"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:background="@drawable/bottomrightcell"
                android:padding="15dp"
                android:text="Absent"
                android:textAlignment="textStart"
                android:textColor="#b30059"
                android:textSize="20dp"
                android:textStyle="bold" />
        </TableRow>

    </TableLayout>

    <ImageView
        android:id="@+id/x_ray_upload_image"
        android:layout_width="162dp"
        android:layout_height="170dp"
        android:layout_marginTop="264dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
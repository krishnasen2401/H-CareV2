    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.infosys.connected.h_carev2.ui.home.HomeFragment"
        android:label="@string/title_Home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_gluecose"
        android:name="com.infosys.connected.h_carev2.ui.appointments.AppointmentsFragment"
        android:label="@string/title_Gluecose"
        tools:layout="@layout/fragment_appointments" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.infosys.connected.h_carev2.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
